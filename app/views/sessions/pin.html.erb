<div class="row justify-content-center mt-5">
  <div class="col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4 text-center">
    
    <%= image_tag "nexmo.png", height: 50, class: 'mb-4' %>
    <%= render :partial => 'layouts/flashes' %>

    <h1>Pin for<br /><small>+<%= session[:msisdn] %></small></h1>

    <%= form_tag pin_verify_path, :class => 'auth' do %>
    <div class="card">
      <div class="card-body">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fas fa-lock"></i>
            </span>
          </div>
          <input type="text" name="pin" id="pin" class="form-control" placeholder="Enter your pin">
        </div>

        <div class="row" style="margin-top: 20px;">
          <div class="col-12 text-center">
            <button type="submit" class="btn btn-lg btn-primary col-12" id="submit">Authenticate</button>
          </div>
        </div>

        <div class="row" style="margin-top: 10px;">
          <div class="col-12 text-center">
            <%= link_to 'Cancel', logout_path, class: 'btn btn-secondary col-12' %>
          </div>
        </div>

      </div>
    </div>
    <% end %>

  </div>
</div>